<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <GridView
        android:id="@+id/gridView_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:numColumns="1">


    </GridView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintBottom_toTopOf="@+id/layout_menu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:orientation="horizontal"
        style="@style/CardView.Light"
        android:background="#C8B9D1">
        <TextView
            android:id="@+id/name_song"
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:text="Tên Bài Hát"/>
        <ImageButton
            android:id="@+id/bt_like"
            android:background="#C8B9D1"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:padding="10dp"
            android:src="@drawable/ic_like"
            android:scaleType="fitStart"/>
        <ImageButton
            android:id="@+id/bt_pause"
            android:background="#C8B9D1"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:padding="10dp"
            android:src="@drawable/ic_pause"
            android:scaleType="fitXY"/>
        <ImageButton
            android:id="@+id/bt_next"
            android:background="#C8B9D1"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:padding="10dp"
            android:src="@drawable/ic_next"
            android:scaleType="fitXY"/>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_menu"
        android:layout_width="match_parent"
        android:layout_height="73dp"
        android:orientation="horizontal"
        android:background="@color/gray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.417"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">


        <ImageButton
            android:id="@+id/iB_home"
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:layout_marginLeft="30dp"
            android:src="@drawable/homee"
            android:scaleType="fitXY"
            android:backgroundTint="@color/gray"
            android:paddingTop="10dp"/>


        <ImageButton
            android:id="@+id/iB_library"
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:src="@drawable/libraryy"
            android:scaleType="fitXY"
            android:backgroundTint="@color/gray"
            android:paddingTop="10dp"
            android:layout_marginLeft="25dp"/>

        <ImageButton
            android:id="@+id/iB_find"
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:src="@drawable/findd"
            android:scaleType="fitXY"
            android:backgroundTint="@color/gray"
            android:paddingTop="10dp"
            android:layout_marginLeft="25dp"/>

        <ImageButton
            android:id="@+id/iB_settings"
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:src="@drawable/settingss"
            android:scaleType="fitXY"
            android:backgroundTint="@color/gray"
            android:paddingTop="10dp"
            android:layout_marginLeft="25dp"/>
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>